<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/gorillas/show.css">
<%- include('../partials/nav') %>

<main>
  <h1>Gorilla Details</h1>
  <div id="show">
    <div>Name:</div>
    <div><%= gorilla.name %></div>
    <div>Age:</div>
    <div><%= gorilla.age %></div>
    <div>Sex:</div>
    <div><%= gorilla.sex %></div>
    <div>Group:</div>
    <div><%= gorilla.group %></div>
    <div>Familial Relationships:</div>
    <div><%= gorilla.family %></div>
  </div>

  <% if (user) { %>
    <% if (behaviors) { %>
      <h2>Current Behaviors</h2>
      <table>
        <thead>
          <tr>
            <th>Behavior</th>
            <th>Keeper</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% behaviors.forEach(behavior => { %>
            <tr>
              <td><%= behavior.behavior %></td>
              <td><%= behavior.keeper.name %></td>
              <td><%= behavior.status %></td>
              <td>
                <a href="/behaviors/<%= behavior._id %>">
                  <button>Details</button></td>
                </a>
              </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  <% } %>
  
</main>
<%- include('../partials/footer') %>